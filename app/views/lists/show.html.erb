<h1><%= @list.name %></h1>
<hr>
<div class="container" id="content">
  <% @list.tasks.each do |task| %>
    <%= link_to task.description, edit_task_path(task) %></br>
  <% end %>  

<button class="btn btn-default btn-xs" style="float:right"><%= link_to 'Edit list', edit_list_path %> </button>
<button class="btn btn-default btn-xs" style="float:right"><%= link_to 'Delete this list',
                @list,
                :method => :delete,
                :data => { :confirm => 'Are you sure broda?' } %></button>
<button class="btn btn-default btn-xs" style="float:right"><%= link_to 'New task', new_task_path(:list_id => @list.id) %></button></br></br>                 
<button class="btn btn-default btn-xs" style="float:left"><%= link_to 'List index', lists_path %></button>

</div>